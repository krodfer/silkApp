<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center">

    <ImageButton
        android:id="@+id/btn_star_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="-5dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@android:drawable/btn_star"
        android:contentDescription="1 estrela" />

    <ImageButton
        android:id="@+id/btn_star_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="-5dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@android:drawable/btn_star"
        android:contentDescription="2 estrelas" />

    <ImageButton
        android:id="@+id/btn_star_3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="-5dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@android:drawable/btn_star"
        android:contentDescription="3 estrelas" />

    <ImageButton
        android:id="@+id/btn_star_4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="-5dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@android:drawable/btn_star"
        android:contentDescription="4 estrelas" />

    <ImageButton
        android:id="@+id/btn_star_5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="-5dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@android:drawable/btn_star"
        android:contentDescription="5 estrelas" />

</LinearLayout>